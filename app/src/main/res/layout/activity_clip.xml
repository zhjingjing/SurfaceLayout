<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ClipActivity">

    <!--矩形裁剪框示例 -->
    <com.zh.suface.view.ClipViewLayout
        android:id="@+id/clip_clip_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:clipBorderWidth="2dp"
        app:clipType="rectangle"
        app:mHorizontalPadding="30dp" />

    <TextView
        android:id="@+id/clip_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="7dp"
        android:paddingTop="15dp"
        android:paddingRight="7dp"
        android:paddingBottom="15dp"
        android:text="cancel"
        android:textColor="@color/bg_white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/clip_post_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="7dp"
        android:paddingTop="15dp"
        android:paddingRight="7dp"
        android:paddingBottom="15dp"
        android:text="post"
        android:textColor="@color/bg_white"
        android:textSize="14sp"
        tools:ignore="RelativeOverlap" />


</RelativeLayout>